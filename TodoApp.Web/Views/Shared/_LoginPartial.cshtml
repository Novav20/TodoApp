@if (User.Identity?.IsAuthenticated == true)
{
    <li class="nav-item">
        <span class="nav-link text-dark">Hola, @User.Identity.Name!</span>
    </li>
    <li class="nav-item">
        <form asp-controller="Auth" asp-action="Logout" method="post" class="form-inline">
            <button type="submit" class="btn btn-link nav-link text-dark">Cerrar Sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Registrarse</a>
    </li>
}
